      <h3>(<%= talk_request.id %>) <strong>Innlegg:</strong>
    <%= else %>
    <li>(<%= talk_request.id %>) <strong><%= if talk_request.type == "reply" do %>Replikk:<%= else %>Faktaopplysning:<% end %></strong>
    <% end %>


